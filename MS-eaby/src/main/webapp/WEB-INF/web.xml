<?xml version="1.0" encoding="UTF-8"?>
<web-app version="2.5"
         xmlns="http://java.sun.com/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
	http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">
    <servlet>
        <servlet-name>HandleExit</servlet-name>
        <servlet-class>lyons.controller.HandleExit</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>HandleLogin</servlet-name>
        <servlet-class>lyons.controller.HandleLogin</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>HandleRegister</servlet-name>
        <servlet-class>lyons.controller.HandleRegister</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>GoodsDao</servlet-name>
        <servlet-class>lyons.dao.GoodsDao</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>BuyGoods</servlet-name>
        <servlet-class>lyons.goods.BuyGoods</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>DeleteGoodsFromCar</servlet-name>
        <servlet-class>lyons.goods.DeleteGoodsFromCar</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>PutGoodsToCar</servlet-name>
        <servlet-class>lyons.goods.PutGoodsToCar</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>HandleExit</servlet-name>
        <url-pattern>/handleExit</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>HandleLogin</servlet-name>
        <url-pattern>/handleLogin</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>HandleRegister</servlet-name>
        <url-pattern>/handleRegister</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>GoodsDao</servlet-name>
        <url-pattern>/goodsDao</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>BuyGoods</servlet-name>
        <url-pattern>/buyGoods</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>DeleteGoodsFromCar</servlet-name>
        <url-pattern>/deleteGoodsFromCar</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>PutGoodsToCar</servlet-name>
        <url-pattern>/putGoodsToCar</url-pattern>
    </servlet-mapping>

    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>
</web-app>
